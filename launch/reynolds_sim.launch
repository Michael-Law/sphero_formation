<launch>
	<group ns="robot_0">
		<node pkg="sphero_formation" type="reynolds_controller.py" name="con0" output="screen"/>
	</group>

	<group ns="robot_1">
		<node pkg="sphero_formation" type="reynolds_controller.py" name="con1"/>
	</group>

	<group ns="robot_2">
		<node pkg="sphero_formation" type="reynolds_controller.py" name="con2"/>
	</group>

	<group ns="robot_3">
		<node pkg="sphero_formation" type="reynolds_controller.py" name="con3"/>
	</group>

	<node pkg="sphero_formation" type="neighbour_search.py" name="search" output="screen"/>

	<node pkg="stage_ros" type="stageros" name="simulator" args="$(find sphero_formation)/sim/sphero_test.world"/>
</launch>